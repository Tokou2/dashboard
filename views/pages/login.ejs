<% include ../components/header %>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<h1 style="text-align: center;">Login</h1>

<div class="card" style="text-align: center; width: 30rem; margin: auto;">
	<div class="card-body">
		<form method="post">
			<div class="form-group">
				<label for="exampleInputEmail1">Email address</label>
				<input name="username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
				<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				<input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		<p>Not registered yet? <a href="/register">click here!</a></p>

	</div>
</div>





